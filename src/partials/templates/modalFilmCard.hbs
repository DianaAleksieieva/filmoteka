      <div class="modal__card-img-thumb">
        <img src="{{poster_path}}" alt="{{name}} class="modal__card-image"">
      </div>

      <div class="modal__card-data">
        <h2 class="modal__card-data-heading">{{name}}</h2>

        <ul class="modal__card-list">
          <li class="modal__card-list-item">
            <p>Vote / Votes</p>
            <p class="modal__card-list-value">
              <b><span class="modal__card-list-rate">{{vote_average}}</span> / {{vote_count}}</b>
            </p>
          </li>
          <li class="modal__card-list-item">
            <p>Popularity</p>
            <p class="modal__card-list-value"><b>{{popularity}}</b></p>
          </li>
          <li class="modal__card-list-item">
            <p>Original Title</p>
            <p class="modal__card-list-value"><b>{{original_title}}</b></p>
          </li>
          <li class="modal__card-list-item">
            <p>Genre</p>
            <p class="modal__card-list-value"><b>{{genres_names}}</b></p>
          </li>
        </ul>

        <h3 class="modal__card-description-heading">About</h3>
        <p class="modal__card-description">
          {{overview}}
        </p>
      </div>
